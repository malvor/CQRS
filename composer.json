{
    "name": "root/cqrs",
    "description": "Simple CQRS implementation",
    "type": "project",
    "authors": [
        {
            "name": "Jakub Zimo≈Ñ",
            "email": "jakub.zimon@gmail.com"
        }
    ],
    "require": {
        "php": "7.4.*",
        "symfony/routing": "^5.2",
        "symfony/config": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symfony/var-dumper": "^5.2"
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "static": [
            "phpstan analyse src tests\n"
        ]
    }
}
